generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pair {
  id             String   @id @default(cuid())
  tokenAddress   String
  pairAddress    String?
  name           String
  symbol         String
  image          String?
  dexScreenerUrl String
  chainId        String   @default("base")
  submittedBy    String
  votes          String?  // JSON: { "voterAddress": direction }
  voteCount      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([submittedBy])
}
